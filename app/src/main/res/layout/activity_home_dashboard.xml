<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_primary10"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".HomeDashboardActivity">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="Welcome to News Reporter App"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Reporter Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardReporter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        app:cardBackgroundColor="#1E1E1E"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_dynamic_primary30"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Reporter Icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="Reporter"
                android:src="@drawable/reporter"
                app:tint="@color/white" />

            <!-- Reporter Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Reporter"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Editor Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEditor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="#1E1E1E"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_dynamic_primary30"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Editor Icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="Editor"
                android:src="@drawable/editor"
                app:tint="@color/white" />

            <!-- Editor Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Editor"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>